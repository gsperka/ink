

<% if logged_in? %>
<% if params[:parent_id] == nil %>
<button id="sketch-submit">Save this sketch</button>

<% elsif Sketch.find(params[:parent_id]).user_id == current_user.id %>
<h3>You cannot edit your own image</h3>
<% else %>
<button id="sketch-submit">Save this sketch</button>

<% end %>
<% else %>
<h1 id="please-login" style="text-align:center;">Log in or sign up to save!</h1>
<% end %>
